  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/info', user: @user %>
        <!--< render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値←これはアクションによって変わる。] >-->
          <h2 class="mt-3">New book</h2>
        <%= render 'books/new', book: @newbook %>
      </div>
      <!--右側。indexメソッド-->
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <tbody>
                <tr>
                  <td><%= attachment_image_tag @user,:profile_image,format: 'jpeg', fallback: "no_image.jpg",size: "40x40"%></br>
                  <%= link_to @user.name, user_path(@user) %></td>
                  <td><%= link_to @book.title, book_path(@book.id) %></td>
                  <td>
                    <%= @book.body %>
                  </td>
                  <% if @book.user_id == current_user.id %>
                    <td><%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-success' %></td>
                    <!--@userから@bookに変えたことで、現在のユーザー-->
                    <td><%= link_to 'Destroy', book_path(@book), method: :delete, data:{confirm: "本当に消しますか？"}, class: 'btn btn-danger' %></td>
                  <% end %>
                </tr>
            </tbody>
          </table>
      </div>
    </div>
  </div>