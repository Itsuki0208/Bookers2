        <h2>User info</h2>
        <!--, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"-->
        <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "63x63" %>
        <table class="table">
          <tbody>
            <tr>
              <th>Name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <!--↓書き方が間違っている可能性あり-->
            <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
        </div>