<main>
  <div class="container">
    <div id="error_explanation">
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>errors prohibited this obj from being saved.</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <label for="user-name">Name</label>
            <%= f.text_field:name, autofocus:true, id: @user_name, class: "form-control name" %>
          </div>
          <div class="form-group">
            <label for="user-image">Image</label>
            <%= f.attachment_field:profile_image, autofocus:true, id: @user_profile_name, class: "form-control-file user_image" %>
          </div>
          <div class="form-group">
            <label for="user-introduction">Introduction</label>
            <%= f.text_area:introduction, autofocus:true, id: @user_introduction, class: "form-control introduction" %>
          </div>
          <div class="form-group">
            <%= f.submit"Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>